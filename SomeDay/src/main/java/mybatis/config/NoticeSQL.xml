<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<resultMap type="noticeModel" id="noticeModelRes">
		<result property="idx" column="idx" />
		<result property="type" column="type" />
		<result property="writer" column="writer" />
		<result property="subject" column="subject" />
		<result property="content" column="content" />
		<result property="times" column="times" />
		<result property="readhit" column="readhit" />
		<result property="file_orgname" column="file_orgname" />
		<result property="file_savname" column="file_savname" />
	</resultMap>


	<!-- 글목록 -->
	<select id="noticeList" resultMap="noticeModelRes">
		SELECT * FROM NOTICE_BOARD
		ORDER BY IDX DESC
	</select>

	<!-- 글 상세보기 -->
	<select id="noticeView" resultMap="noticeModelRes" parameterType="Integer">
		SELECT * FROM NOTICE_BOARD
		WHERE IDX = #{idx}
	</select>

	<!-- 글쓰기 -->
	<insert id="noticeWrite" parameterType="noticeModel">
		INSERT INTO
		NOTICE_BOARD(IDX, SUBJECT, CONTENT, FILE_ORGNAME, FILE_SAVNAME)
		VALUES
		(NOTICE_BOARD_IDX_SEQ.NEXTVAL, #{subject}, #{content}, 1,2)
	</insert>
	
	<!-- 글삭제 -->
	<delete id="noticeDelete" parameterType="noticeModel" >
			DELETE FROM NOTICE_BOARD WHERE IDX=#{idx}
	</delete>
	
	<!-- 글수정 -->
	<update id="noticeModify" parameterType="noticeModel">
			UPDATE NOTICE_BOARD
			SET
				SUBJECT = #{subject},
				CONTENT = #{content}
			WHERE
				IDX = #{idx}	
	</update>

</mapper>